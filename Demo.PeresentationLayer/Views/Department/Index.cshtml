@model IEnumerable<DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>
<br />
<br />
<a asp-controller="Department" asp-action="Create" class="btn btn-primary mb-4">Create New Department</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
           {
               <tr>
                   <td> @department.Code</td>
                    <td> @department.Name</td>
                    <partial name="_ButtonsPartialView" model="@department.Id.ToString()" />

               </tr>
           }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Department</h3>
    </div>
}

