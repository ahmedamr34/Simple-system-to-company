<h1>All Rolles</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role</a>


@*Search*@
<form asp-action="Index" class="w-100">
    <div class=" row align-items-center justify-content-center mb-3  ">
        <div class="">
            <input type="text" class="form-control " name="SearchValue" />
        </div>
        <div class="">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>


@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover min-vh-100">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U=>U.Id)</th>
                <th>@Html.DisplayNameFor(U=>U.Name)</th>


                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(M => role.Id)</td>
                    <td> @Html.DisplayFor(M => role.Name)</td>


                    <partial name="_ButtonsPartialView" model="@role.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Roles!! </h3>
    </div>
}

