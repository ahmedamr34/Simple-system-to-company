@model EmployeeViewModel

@inject IDepartmentRepository Department;
@{
    var Dept = new SelectList(await Department.GetAll(), "Id", "Name");
}

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Addrees"></label>
    <input class="form-control" asp-for="Addrees" />
    <span asp-validation-for="Addrees" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label form-check-inline" asp-for="IsActive"></label>
    <input class=" " asp-for="IsActive" />
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input class="form-control" asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
